{
  "name": "bloodline",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:local": "dotenv -e .env.prod -- prisma generate && dotenv -e .env.prod -- next build",
    "start": "next start",
    "lint": "eslint",
    "db:migrate": "DATABASE_URL=\"postgresql://bloodline_user:bloodline_password@localhost:5432/bloodline?schema=public\" prisma migrate dev",
    "db:migrate:prod": "dotenv -e .env.prod -- prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts",
    "db:seed:prod": "dotenv -e .env.prod -- tsx prisma/seed.ts",
    "db:studio": "DATABASE_URL=\"postgresql://bloodline_user:bloodline_password@localhost:5432/bloodline?schema=public\" prisma studio",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "postinstall": "prisma generate"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@prisma/client": "^6.19.0",
    "@tailwindcss/typography": "^0.5.19",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.2.3",
    "lucide-react": "^0.553.0",
    "next": "16.0.1",
    "next-auth": "^4.24.13",
    "prisma": "^6.19.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "babel-plugin-react-compiler": "1.0.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "tsx": "^4.20.6",
    "typescript": "^5"
  }
}
